<div class="camel-spec">
  <div class="product-image">
    <%= cl_image_tag @camel.photo, height: 300, width: 400, crop: :fill %>
  </div>
  <div class="product-info">
    <h1> <%= @camel.name %></h1>

    <p><%= @camel.description %></p>
    <p><%= "Category: #{@camel.category}" %></p>
    <p><%= "Location: #{@camel.location}" %></p>
    <p><%= "Price/day - VAT included" %></p>
    <h3><%= "#{@camel.price}$" %></h3>

    <div class="show-action">

      <h4><%= link_to "Book a slot", new_camel_booking_path(@camel), class:"btn btn-book" %></h4>

      <% if policy(@camel).destroy? %>
      <div class= "remove">
        <%= link_to camel_path(@camel), method: :delete, class: "btn btn-delete" do %>
        <i class="fas fa-trash"></i>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>

